    <!-- JavaScript Logic -->
    <script>
        // --- Navigation Logic ---
        const mobileBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        
        mobileBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                mobileMenu.classList.add('hidden'); // Close mobile menu on click
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // --- Chart.js Implementations ---
        
        // 1. Attributes Radar Chart
        const ctxAttr = document.getElementById('attributesChart').getContext('2d');
        const attrChart = new Chart(ctxAttr, {
            type: 'radar',
            data: {
                labels: ['Creativity', 'Networking', 'Strategy', 'Consistency', 'Humor', 'Analytics'],
                datasets: [{
                    label: 'Ideal Creator Profile',
                    data: [90, 85, 80, 95, 70, 75],
                    backgroundColor: 'rgba(197, 160, 89, 0.2)', // Gold transparent
                    borderColor: '#c5a059',
                    pointBackgroundColor: '#8e2b2b',
                    borderWidth: 2
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    r: {
                        beginAtZero: true,
                        ticks: { display: false },
                        grid: { color: 'rgba(0,0,0,0.1)' }
                    }
                },
                plugins: {
                    legend: { display: false }
                }
            }
        });

        // 2. Growth Line Chart
        const ctxGrowth = document.getElementById('growthChart').getContext('2d');
        const growthChart = new Chart(ctxGrowth, {
            type: 'line',
            data: {
                labels: ['Month 1', 'Month 2', 'Month 3', 'Month 4', 'Month 5', 'Month 6'],
                datasets: [{
                    label: 'Network Reach (People)',
                    data: [50, 120, 300, 850, 2000, 5000], // Exponential growth mock data
                    borderColor: '#8e2b2b', // Red
                    backgroundColor: 'rgba(142, 43, 43, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { borderDash: [5, 5] }
                    },
                    x: {
                        grid: { display: false }
                    }
                },
                plugins: {
                    legend: { display: true, position: 'bottom' }
                }
            }
        });

        // 3. Weekly Schedule Bar Chart
        const ctxSchedule = document.getElementById('scheduleChart').getContext('2d');
        const scheduleChart = new Chart(ctxSchedule, {
            type: 'bar',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'SUN'],
                datasets: [{
                    label: 'Allowed Posting Volume',
                    data: [10, 10, 10, 10, 20, 30, 100], // Sunday spike
                    backgroundColor: [
                        'rgba(255, 255, 255, 0.2)',
                        'rgba(255, 255, 255, 0.2)',
                        'rgba(255, 255, 255, 0.2)',
                        'rgba(255, 255, 255, 0.2)',
                        'rgba(255, 255, 255, 0.2)',
                        'rgba(255, 255, 255, 0.5)',
                        '#c5a059' // Gold for Sunday
                    ],
                    borderColor: 'transparent',
                    borderWidth: 0
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    y: {
                        display: false,
                        beginAtZero: true
                    },
                    x: {
                        ticks: { color: '#fdfbf7' },
                        grid: { display: false }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.raw + '% Activity Level';
                            }
                        }
                    }
                }
            }
        });

        // --- Interaction Logic (Form Handling) ---
        function handleEnlistment() {
            const q1 = document.getElementById('q1').value;
            const q2 = document.getElementById('q2').value;
            const q3Radios = document.getElementsByName('q3');
            let q3 = '';
            for (const radio of q3Radios) {
                if (radio.checked) {
                    q3 = radio.value;
                    break;
                }
            }

            const feedbackEl = document.getElementById('formFeedback');
            feedbackEl.classList.remove('hidden', 'bg-red-100', 'text-red-800', 'bg-green-100', 'text-green-800', 'border-red-300', 'border-green-300');

            // Validation
            if (!q1 || !q2 || !q3) {
                feedbackEl.innerHTML = "<strong>Halt!</strong> You must answer all questions, citizen.";
                feedbackEl.classList.add('bg-red-100', 'text-red-800', 'border-red-300');
                return;
            }

            // Logic check
            if (q2 === 'no') {
                feedbackEl.innerHTML = "<strong>Treason!</strong> We cannot accept those who defy the Senate.";
                feedbackEl.classList.add('bg-red-100', 'text-red-800', 'border-red-300');
                return;
            }

            if (q3 === 'bot') {
                feedbackEl.innerHTML = "<strong>Begone, Automaton!</strong> Only humans may enter these gates.";
                feedbackEl.classList.add('bg-red-100', 'text-red-800', 'border-red-300');
                return;
            }

            // Success - GENERATE THE SECRET CODE
            const secretCode = "ROMA_VIRAL_XXIV"; // You can change this code to whatever you want
            
            feedbackEl.innerHTML = `
                <div class="text-center">
                    <div class="text-2xl mb-2 font-bold roman-font text-[#8e2b2b]">üéâ AVE, CITIZEN! üéâ</div>
                    <p class="mb-4">You have proven your worth. Here is your entry code for the Facebook Group:</p>
                    
                    <div class="bg-white border-2 border-[#c5a059] border-dashed p-4 rounded mb-4">
                        <span class="text-3xl font-mono font-bold tracking-widest text-[#2c2c2c] select-all">${secretCode}</span>
                    </div>

                    <p class="text-sm italic text-gray-600 mb-4">Copy this code. You will need it to answer the Membership Question.</p>
                    
                    <a href="https://www.facebook.com/groups/YOUR_GROUP_ID_HERE" target="_blank" class="inline-block bg-[#1877F2] text-white font-bold py-3 px-6 rounded hover:bg-[#155db2] transition-colors">
                        Go to Facebook Group
                    </a>
                </div>
            `;
            feedbackEl.classList.add('bg-[#f4ebd0]', 'text-[#2c2c2c]', 'border-[#c5a059]');
            
            // Confetti effect (simple visual cue)
            const btn = document.querySelector('#enlist button');
            btn.style.display = 'none'; // Hide the submit button
        }

    </script>
</body>
